@model CursedPathWebApp.Models.HomePageModel;
@{
    ViewData["Title"] = "Home Page";
}
    <iframe src="//users.instush.com/mini/?user_id=216308850&username=slightly.mediocre&sid=-1&susername=-1&tag=-1&stype=mine&t=9999992KeBBTY4F21t0DOYqh02B7Qxy_mUh8s-CvJN6vtYYQD6j_OT9BWAokrJrA9h8xn0yJjMwIj5ld0" allowtransparency="true" frameborder="0" scrolling="no" style="display:block;width:612px;height:612px;border:none;overflow:visible;"></iframe>

<div class="row">
    <div class="col-md-3">
        @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Band Member")))
        {
            <h2>Headlines <a role="button" class="btn btn-default" href="/Headline/Manage"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> <span class="sr-only">Manage Headlines</span></a></h2>
        }
        else
        {
            <h2>Headlines</h2>
        }
        <div id="homepage-headlines">
        @if (Model.RecentBlogPosts.Count() > 0)
        {
            foreach (BlogPost post in Model.RecentBlogPosts)
            {
                <section style="padding: 1ex">
                    <h3 class="homepage-post-title">@post.Title</h3>
                    <div class="homepage-post-date">@post.DatePosted</div>
                    <div class="homepage-post-content">
                        @Html.Raw(post.ContentHTML)
                    </div>
                </section>
            }
            <div class="right">@Html.ActionLink("View Archive...", "Archive", "Headline")</div>
        }
        else
        {
            <p>There are no headlines.</p>
        }
        </div>
    </div>
    <div class="col-md-3">
        <h2>How to</h2>
    </div>
    <div class="col-md-3">
        <h2>Overview</h2>
        
    </div>
    <div class="col-md-3">
        <h2>Run &amp; Deploy</h2>
        
    </div>
</div>
