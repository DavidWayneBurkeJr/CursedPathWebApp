@model IEnumerable<SongModel>
@using CursedPathWebApp.Models
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<table id="myDataTable" class="display">
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Duration</th>
            <th>Comments</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var song in Model)
        {
            <tr id="@song.Id">
                <tr>@song.OrderId</tr>
                <tr>@song.SongTitle</tr>
                <tr>@song.Duration</tr>
                <tr>@song.Comments</tr>
            </tr>
        }
    </tbody>
</table>

<script type="text/javascript">

    $(document).ready(function () {
        $('#myDataTable').dataTable().rowReordering();
    });
   
        $(document).ready(function () {
            $('#myDataTable').dataTable().rowReordering({ sURL: "/Setlist/UpdateOrder" });
    });

</script>
